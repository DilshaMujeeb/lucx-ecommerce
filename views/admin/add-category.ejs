<section class="">
  <div class="container d-flex justify-content-center">
    <div class="row w-75 mt-5">
      <div class="col-md-12">
        <h2 class="text-center">Add Category</h2>
        <% if (typeof error !== 'undefined') { %>
          <div class="alert alert-danger">
            <%= error %>
          </div>
        <% } %>
        <form action="/admin/add-category" method="POST">
          <label for="">Category Name</label>
          <input type="text" name="categoryname" class="form-control" />
          <button type="submit" class="btn btn-success mt-4">Submit</button>
        </form>
      </div>
    </div>
  </div>
</section>

<!-- Table section -->
<section w-50 mx-auto>
  <div class="card-body">
    <div class="row w-50 mt-5 mx-auto">
      <div class="table-responsive">
        <div class="table-responsive">
          <table class="table align-middle table-nowrap mb-0">
            <thead class="table-light">
              <tr>
                <th class="align-middle" scope="col">No.</th>
                <th class="align-middle" scope="col">Category Name</th>
                <th class="align-middle" scope="col">Option</th>
              </tr>
            </thead>
            <!-- viewCategory is the response given by the admincontrol-->
            <tbody>

              <% viewCategory.forEach(function(viewCategory,index){ %>

              <tr>
                <td><%= index+1 %></td>

                <td><%= viewCategory.CategoryName %></td>
                <td>
                  <!--<a href="/admin/edit-category/<%= viewCategory._id %>" class="btn btn-xs btn-success"> Edit</a>-->
                  <% if (viewCategory.unlist) { %>
                    <a href="/admin/list-category/<%= viewCategory._id %>" class="btn btn-xs btn-danger" onclick="return confirm('Are you sure you want to list <%= viewCategory.categoryName %>?')">List</a>
                  <% } else { %>
                    <a href="/admin/unlist-category/<%= viewCategory._id %>" class="btn btn-xs btn-danger" onclick="return confirm('Are you sure you want to unlist <%= viewCategory.categoryName %>?')">Unlist</a>
                  <% } %>


                  
                </td>
              </tr>
              <% })%>

            </tbody>
          </table>
        </div>
      </div>
      <!-- table-responsive end// -->
    </div>
  </div>
</section>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
