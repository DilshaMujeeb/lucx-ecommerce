<body>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-3">
        <div class="card">
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><a href="/user-dash" class="nav-link">Dashboard</a></li>
            <li class="list-group-item"><a href="/order-page1" class="nav-link">Orders</a></li>
            <li class="list-group-item"><a href="/wallet" class="nav-link">Wallet</a></li>
            <li class="list-group-item"><a href="/address" class="nav-link">My Address</a></li>
            <li class="list-group-item"><a href="/account-details" class="nav-link active">Account details</a></li>
            <li class="list-group-item"><a href="/logout" class="nav-link">Logout</a></li>
          </ul>
        </div>
      </div>
      <div class="col-md-9">
        <div class="container">
          <h2 class="mt-5 mb-4">Account Details</h2>
          <form action="/account" method="POST">
            <div class="form-group">
              <label for="name">Name:</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= userDetails[0].username %>" required>
            </div>
            <div class="form-group">
              <label for="mobile">Mobile Number:</label>
              <input type="tel" class="form-control" id="mobile" name="mobile" value="<%= userDetails[0].phoneNumber %>" required>
            </div>
            <div class="form-group">
              <label for="email">Email Address:</label>
              <input type="email" class="form-control" id="email" name="email" value="<%= userDetails[0].email %>" required>
            </div>
            <hr>
            <h4>Change Password</h4>
            <div class="form-group">
              <label for="currentPassword">Current Password:</label>
              <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
            </div>
            <div class="form-group">
              <label for="newPassword">New Password:</label>
              <input type="password" class="form-control" id="newPassword" name="newPassword" required>
            </div>
            <div class="form-group">
              <label for="confirmPassword">Confirm New Password:</label>
              <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
<script>
  // Highlight the active link
  const navLinks = document.querySelectorAll('.nav-link');
  const currentUrl = window.location.href;

  navLinks.forEach((link) => {
    if (link.href === currentUrl) {
      link.parentNode.classList.add('active');
    } else {
      link.parentNode.classList.remove('active');
    }
  });
</script>